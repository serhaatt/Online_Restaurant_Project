@{ ViewBag.Title = "Food";
    if (Session["w"] == null)
    {
        Layout = "~/Views/Shared/_LayoutMisafir.cshtml";
    } }
<html>
<head>
    <style>
        #btn1 {
            position: absolute;
            left: 35px;
        }

        #btn2 {
            position: absolute;
            right: 40px;
        }

        .nav-link {
            position: relative;
            top: 0px;
            left: 0px;
            border-width: 0;
            width: 200px;
            height: 50px;
            background-color: #a7bcb9;
        }
        .cl {
            position: relative;
            min-height: 1px;
            padding-right: 20px;
            padding-left: 20px;
        }

        .container {
            width: 1500px;
            margin-right: 0px;
            margin-left: 250px;
        }
    </style>
</head>
<body>
    
    <div class="mt-5" style="width:820px;height:400px;float:right;border-radius:10px;">
        @Html.Action("Slides", "User")
    </div>
    <div>   
        <div class="col-lg-3 mt-4">
            @Html.Action("FilterPartial", "User")
        </div>
        <div class="col-lg-12" style="justify-content:center;display:flex;align-items:center">
            <div id="Yemek" style="margin-left:290px">
               
                <div>
                    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #a7bcb9">
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    <button class="nav-link"><b>@Html.ActionLink("Başlangıçlarımız", "Food", new { str = "starter" }, new { style = "color:black;text-decoration:none; font-size:20px" })</b></button>
                                </li>

                                <li class="nav-item active">
                                    <button class="nav-link"><b>@Html.ActionLink("Ana Yemeklerimiz", "Food", new { str = "main" }, new { style = "color:black;text-decoration:none; font-size:20px" })</b></button>
                                </li>
                                <li class="nav-item active">
                                    <button class="nav-link"><b>@Html.ActionLink("Tatlılarımız", "Food", new { str = "dessert" }, new { style = "color:black;text-decoration:none; font-size:20px" })</b></button>
                                </li>
                                <li class="nav-item active">
                                    <button class="nav-link"><b>@Html.ActionLink("İçeceklerimiz", "Food", new { str = "drink" }, new { style = "color:black;text-decoration:none; font-size:20px" })</b></button>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
                <div id="a">
                    @Html.Action("FoodPartial", "User", new { str = ViewData["str"] })
                </div>
            </div>
        </div>
    </div>

</body>
</html>

<script>
    $('.carousel').carousel({
  interval: 4000
})
    function closeNtfctn() {
        document.getElementById("ntfctn").style.display = "none";
    }
    function filtrele() {
        var sentObj = {
            SearchTerm: document.getElementById("SearchTerm").value,
            MinPrice: document.getElementById("MinPrice").value,
            MaxPrice: document.getElementById("MaxPrice").value,
            Value: document.getElementById("sırala").value
        };
        $.ajax({
            url: '@Url.Action("Filter", "User")',
            data: JSON.stringify(sentObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
           success: function () {

                const xhttp = new XMLHttpRequest();
                xhttp.open("GET", "@Url.Action("FoodPartial", "User")");
                xhttp.send();
                xhttp.onload = function () {
                    $("#a").html(this.responseText);
                }


            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }

        });

    }


    function add(FoodID) {
        var sentObj = {
            FoodID: FoodID
        };

        $.ajax({
            url: '@Url.Action("Add", "User")',
            data: JSON.stringify(sentObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                if (data.success) {
                    const xhttp = new XMLHttpRequest();
                    xhttp.onload = function () {
                        $("#Yemek").html(this.responseText);
                    }
                }
                else if (data.durum == 0) {
                    alert("Maksimum Sayıya Ulaştınız!")
                }
                else {
                    alert("Lütfen Giriş Yapınız!")
                    window.location.href = '@Url.Action("Index", "User")';
                }

            },
        });
    }

    function filter() {
        var sentObj = {
            SearchTerm:"",
            MinPrice:"",
            MaxPrice:"",
        };
        console.log(sentObj)
        $.ajax({
            url: '@Url.Action("Filter", "User")',
            data: JSON.stringify(sentObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
           success: function () {

                const xhttp = new XMLHttpRequest();
                xhttp.open("GET", "@Url.Action("FoodPartial", "User")");
                xhttp.send();
                xhttp.onload = function () {
                    $("#a").html(this.responseText);
               }
               document.getElementById("SearchTerm").value = "";
               document.getElementById("MinPrice").value = "";
               document.getElementById("MaxPrice").value = "";

            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }

        });

    }
</script>