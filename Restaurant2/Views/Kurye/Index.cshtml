@model Restaurant1.Models.admin.KuryeInfo
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml"; }
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Scripts/Css/styleLogin.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    @using (Html.BeginForm("Index", "Kurye", FormMethod.Post))
    {
<section class="container">
        <div style="justify-content:center;text-align:center;position:absolute;top:5.75%;left:35.75%;z-index:-1">
            <img src="~/Resimler/logo1.png" />
        </div>
    <div class="form-container">

        <img src="https://raw.githubusercontent.com/hicodersofficial/glassmorphism-login-form/master/assets/illustration.png" alt="illustration" class="illustration" style="position:absolute;top:-25%;width:63.5%" />

        <h1 class="opacity" style="position:relative;left:54px">Kurye Girişi</h1>
        <form>
            <div class="login-container">
                @Html.AntiForgeryToken()


                @Html.LabelFor(m => m.KuryeNumber, new { @style = "font-size:15px" })
                @Html.TextBoxFor(m => m.KuryeNumber, new { @class = "form-control", @placeholder = "Kurye Numarası", @style = "font-size:15px" }) <br />

                @Html.LabelFor(m => m.Password, new { @style = "font-size:15px" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Şifre", @minlength = 4, @style = "font-size:15px" }) <br />


                <div class="register-forget opacity" style="position:relative;left:115px">
                    <input type="submit" value="Giriş Yap" style="font-size:large" />
                </div>
            </div>
        </form>
    </div>

</section>}
    <script src="~/Scripts/JsLogin.js"></script>
</body>
</html>