@model IEnumerable<Restaurant1.Models.User.AdresVeBilgi>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/Scripts/Css/AccountCss.css" />
    <style>
        .tbl {
            background-color: #a7bcb9;
        }

        i {
            font-size: 150px
        }
    </style>
</head>
<body>
    <div class="page-content page-container" id="page-content" style="position:relative;width:800px;height:600px">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-6 col-md-12">
                    <div class="card user-card-full" style="width:800px;height:650px;top:0px">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white" style="width:300px;height:700px;position:relative; top:150px">
                                    <div class="m-b-25">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    <h6 class="f-w-600">@Model.Last().UserName</h6>
                                    <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                </div>
                            </div>
                            <div class="col-sm-8" style="position:relative;top:20px">
                                <div class="card-block">
                                    <h6 class="m-b-20 p-b-5 f-w-600" style="position:relative;left:200px;font-size:18px">Bilgilerim</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Email Adresiniz</p>
                                            <input class="f-w-400" id="mail" style="border-radius:5px" type="email" value="@Model.First().UserMail" />
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Telefon Numaranız</p>
                                            <input class="f-w-400" id="pho" style="border-radius:5px" value="@Model.Last().UserPhone" />
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6" style="position:relative;top:10px">
                                                <p class="m-b-10 f-w-600" style="position:relative;left:200px">Adreslerim</p>
                                                <h6 class="text-muted f-w-400">
                                                    <select class="form-select form-select-lg" id="adr" style="width:475px">
                                                        @foreach (var item in Model)
                                                        {
                                                            <option value="@item.Adress">@item.Adress</option>
                                                        }
                                                    </select>
                                                </h6>
                                                <div style="position:relative;font-size:18px">
                                                    <p class="m-b-10 f-w-600" style="position:relative;left:175px">Seçili Olan Adresiniz</p>
                                                    <input class="f-w-600" style="width:475px;border-radius:5px" value="@Model.Last().Addresses" disabled />
                                                </div>
                                                <button class="btn btn-danger col-sm-8" style="width:150px;position:relative;left:175px;top:5px">@Html.ActionLink("Adres Ekle", "AddAddress", "User", new { style = "color:black;text-decoration:none" })</button>
                                            </div>
                                        </div>
                                        <div class="col-sm-6" style="position:relative;left:80px;top:20px;width:520px">
                                            <button class="btn btn-success col-sm-8" style="border-radius:5px" onclick="return update()">Bilgilerimi Güncelle</button>
                                        </div>

                                        <div style="position:relative;left:150px;top:20px">
                                            <div class="col-sm-8">
                                                <p class="m-b-10 f-w-600">Eski Şifreniz</p>
                                                <input type="password" style="border-radius:5px" id="eskipsw" placeholder="Eski Şifreniz" />
                                            </div>
                                            <div class="col-sm-8">
                                                <p class="m-b-10 f-w-600">Yeni Şifreniz</p>
                                                <input type="password" style="border-radius:5px" id="yenipsw1" placeholder="Yeni Şifreniz" />
                                            </div>
                                            <div class="col-sm-8">
                                                <p class="m-b-10 f-w-600">Yeni Şifreniz</p>
                                                <input type="password" style="border-radius:5px" id="yenipsw2" placeholder="Yeni Şifreniz" />
                                            </div>
                                        </div>
                                        <div style="position:relative;top:30px;left:80px;font-size:18px">
                                            <button class="btn btn-success col-sm-8" style="border-radius:5px" onclick="return PswUpdate()">Şifremi Değiştir</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>