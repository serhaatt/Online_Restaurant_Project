@model IEnumerable<Restaurant1.Models.User.AdresVeBilgi>
@{ ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body style="background-color:bisque">

        <table class="table" style="border:0px">
            <tr>
                <td>İsim</td>
            </tr>
            <tr>
                <td><input id="name" value="" /></td>
            </tr>
            <tr>
                <td>Mail</td>
            </tr>
            <tr>
                <td><input id="mail" value="" /></td>
            </tr>
            <tr>
                <td>Adres</td>
            </tr>
            <tr>
                <td>
                    <select class="form-select">
                        <option value="Addresses">Addresses</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Telefon Numarası</td>
            </tr>
            <tr>
                <td><input id="pho" value="" /></td>
            </tr>
            <tr>
                <td>
                    <button onclick="return update()">Güncelle</button>
                </td>
            </tr>
        </table>
    <button class="btn btn-danger">@Html.ActionLink("Adres Ekle", "AddAddress", "User", new { style = "color:black" })</button>

</body>
</html>


<script>
    function update() {
        var sentObj = {
            Name: document.getElementById("name").value,
            Email: document.getElementById("mail").value,
            Adress: document.getElementById("exampleDataList").value,
            Phone: document.getElementById("pho").value,
        };
        console.log(sentObj)
        $.ajax({
            url: '@Url.Action("UpdateInformations", "User")',
            data: JSON.stringify(sentObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function () {
                alert("Başarıyla Güncellendi")
            },
        });

    }
</script>