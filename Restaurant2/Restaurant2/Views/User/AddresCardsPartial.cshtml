@model IEnumerable<Restaurant1.Models.User.AdresBilgi>


<!DOCTYPE html>

<html>
@{
    var counter = 0;
}
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body style="background-color: #a7bcb9;">
    <div id="deneme">

        <div style="position:relative; top:100px;">

            <div class="container">
                <div class="row">
                    @foreach (var x in Model)
                    {
                        var adres = x.Adres;




                        <div class="col-md-4 mt-4">
                            <div style="border-color:black;width:auto;">
                                <div class="col-sm-10 mb-8 mb-sm-0" style="width:auto; ">
                                    <div class="card" style="border-color:black; border:solid; border-radius:5px; border-width:1px;">
                                        <div class="card-body">
                                            <h5 class="card-title" style="font-weight:bold; font-size:17px"><div class="col-md-14 overflow-auto" style="height:6rem;">@adres</div></h5>
                                            <hr style="border: 1px solid black;" />
                                            <p class="card-text"></p>
                                            <button class="btn btn-primary" onclick="return Düzenle(@x.ID)">DÜZENLE</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="container mt-5" id="adres" style="display:none;">
            <div class="row">
                <div class="col-lg-3">
                </div>
                <div class="col-lg-6" style="position:relative; top:100px;">


                    <h1 class="text-center">Adres Düzenle</h1>





                    <div class="col-md-8 order-md-1" style="position:relative; left:150px;">

                        <form class="needs-validation" novalidate="">

                            <div class="mb-3">
                                <label for="semt">Semt </label>
                                <input type="text" class="form-control" id="semt" placeholder="Semt">
                                <input type="text" hidden id="AdresID" value=" " />
                                <div class="invalid-feedback"> Please enter a valid email address for shipping updates. </div>
                            </div>
                            <div class="mb-3">
                                <label for="email">Sokak </label>
                                <input type="text" class="form-control" id="sokak" placeholder="Sokak">
                                <div class="invalid-feedback"> Please enter a valid email address for shipping updates. </div>
                            </div>
                            <div class="mb-3">
                                <label for="email">İlçe </label>
                                <input type="text" class="form-control" id="ilçe" placeholder="İlçe">
                                <div class="invalid-feedback"> Please enter a valid email address for shipping updates. </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName">Apartman Adı</label>
                                    <input type="text" class="form-control" id="ApartmanAdi" placeholder="" value="" required="">
                                    <div class="invalid-feedback"> Valid first name is required. </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="lastName">Apartman Numarası</label>
                                    <input type="number" class="form-control" id="ApNo" placeholder="" value="" required="">
                                    <div class="invalid-feedback"> Valid last name is required. </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName">Kat</label>
                                    <input type="number" class="form-control" id="kat" placeholder="" value="" required="">
                                    <div class="invalid-feedback"> Valid first name is required. </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="lastName">Daire Numarası</label>
                                    <input type="number" class="form-control" id="DaNo" placeholder="" value="" required="">
                                    <div class="invalid-feedback"> Valid last name is required. </div>
                                </div>
                            </div>

                        </form>


                        <div style="position:relative; top:17px; left:80px;">
                            <button class="btn btn-success" onclick="return Güncelle()">Güncelle</button>
                        </div>
                        <div>
                            <a href="@Url.Action("Account","User")" class="btn btn-danger" style="position:relative; bottom:18px; left:180px;">Geri Dön</a>

                        </div>
                        <div class="col-lg-3">
                        </div>
                        <br />
                    </div>
                </div>
            </div>
        </div>
</body>
</html>