@model IEnumerable<Restaurant1.Models.admin.UsersDetail>
@{ Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }
<html>
<head>
    <style>
        #saat {
            position: absolute;
            right: 66px;
            top: 90px;
            font-size: 30px;
        }

        #tarih {
            position: absolute;
            right: 50px;
            font-size: 30px;
        }

        #clock {
            font-family: 'Share Tech Mono', monospace;
            color: #ffffff;
            text-align: center;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            color: #daf6ff;
            text-shadow: 0 0 20px rgba(10, 175, 230, 1), 0 0 20px rgba(10, 175, 230, 0);
        }

        .time {
            letter-spacing: 0.05em;
            font-size: 80px;
            padding: 5px 0;
        }

        .date {
            letter-spacing: 0.1em;
            font-size: 24px;
        }

        .text {
            letter-spacing: 0.1em;
            font-size: 12px;
            padding: 20px 0 0;
        }
        }
    </style>
</head>
<body style="background-color: #a7bcb8">
    <link rel="stylesheet" href="style.css">
    <div id="clock" style="position: relative; top: 60px; left:1300px">
        <p style="position:relative;" class="date">@DateTime.Now.ToString("dd/MM/yyyy")</p>
        <p style="position:relative; left:0px; top:-5px;" class="time" id="saat">@DateTime.Now.ToString("HH:mm:ss")</p>

    </div>
    <script>
        setInterval(() =>
            document.getElementById("saat").textContent = new Date().toLocaleTimeString("tr"), 1000)
    </script>
    <center>
        <h1 class="mt-5">Kullanıcılar</h1>
    </center>
    <div id="users">
        @Html.Action("UsersPartial", "Admin")
    </div>
</body>
</html>
<script>
    function Remove(UserID) {
        var sentObj = {
            UserID: UserID
        };

        $.ajax({
            url: '@Url.Action("DeleteUser", "Admin")',
            data: JSON.stringify(sentObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function () {
                alert("Başarıyla Silindi!!")
                const xhttp = new XMLHttpRequest();
                xhttp.onload = function () {
                    $("#sepet").html(this.responseText);
                }
                xhttp.open("GET", "@Url.Action("UsersPartial", "Admin")");
                xhttp.send();
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });

    }
    function KodGönder(number,id,m,c) {
        //document.getElementById("onay").value = "Gönderildi";
        var sentObj = {
            Phone: number,
            UserID: id,
            Mail: m,
            count:c
        };
        document.getElementById(sentObj.count).style.display = "";
        document.getElementById(sentObj.UserID).type = "text";
        document.getElementById(sentObj.UserID).value = "";
        document.getElementById(sentObj.UserID).onclick = "";
        $.ajax({
            url: '@Url.Action("KodGönder", "Admin")',
            data: JSON.stringify(sentObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                alert(data.message)
                console.log(data.kod)
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }
    function OnayKodu(id,m,p,c) {
        var kod = {
            userid: id,
            mail: m,
            phone: p,
            count:c
        };
        var sentObj = {
            Kod: document.getElementById(kod.userid).value,
            UserID:id,
        }
        $.ajax({
            url: '@Url.Action("KodOnay", "Admin")',
            data: JSON.stringify(sentObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                if (data.success) {
                    document.getElementById(kod.userid).value = "Zaten Onaylanmış";
                    document.getElementById(kod.userid).type = "button";
                    document.getElementById(kod.userid).disabled = "disabled";
                    document.getElementById(kod.mail).textContent = data.Mail;
                    document.getElementById(kod.phone).textContent = data.Phone;
                    document.getElementById(kod.count).style.display = "none";
                    alert(data.message)
                }
                else {
                    alert(data.message)
                }
            },
        });
    }
</script>


